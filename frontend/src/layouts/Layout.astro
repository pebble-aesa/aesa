---
import '@fontsource/dm-sans';
import Alert from '../components/Alert.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Alert href='/directory'>
      Need help <strong>now</strong>? Check out our mental health directory
    </Alert>

    <div id='nav'>
      <h1>
        <a href='/'>Aesa</a>
      </h1>

      <div id='links'>
        <a href='/directory'>Mental Health Directory</a>
        <a href='/about'>About</a>
      </div>
    </div>

    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --title: #00295f;
    --foreground: #20262e;
    --background: rgb(235, 253, 255);
    --alert-foreground: #f5f7fa;
    --alert-background: #20262e;
  }

  html {
    font-family: 'DM Sans', sans-serif;
    color: var(--foreground);
    background: var(--background);
    background-size: 224px;
  }

  html,
  body {
    margin: 0;
    padding: 0;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  h1 {
    font-size: 3rem;
    font-weight: bold;
    text-align: center;

    a {
      color: var(--title);
      text-decoration: none;
    }
  }

  #links {
    display: flex;
    justify-content: center;

    a {
      margin: 0 1em;
      color: var(--title);
      text-decoration: none;
      font-size: 20px;
    }
  }

  main {
    margin: 1rem auto;
    padding: 1rem;
    max-width: 800px;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
